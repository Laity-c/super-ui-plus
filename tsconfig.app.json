{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true, // 允许项目引用
    "noEmit": false, // 禁止生成 .js 文件
    "allowImportingTsExtensions": false, // 禁止导入 .ts 文件
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // 生成 .tsbuildinfo 文件

    "types": ["vite/client", "element-plus/global"],
    "lib": ["esnext", "dom"],
    // 限制类型查找范围，排除 React 类型
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    /* Linting */
    // "strict": true,
    "noUnusedLocals": true, // 允许未使用的变量
    "noUnusedParameters": true, // 允许未使用的参数
    "erasableSyntaxOnly": true, // 允许未使用的语法
    "noFallthroughCasesInSwitch": true, // 允许未处理的情况
    "noUncheckedSideEffectImports": true // 允许未检查的导入
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "play/**/*.ts",
    "play/**/*.tsx",
    "play/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "vite.config.ts"
  ],
}
